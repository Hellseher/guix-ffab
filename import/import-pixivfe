(define-public go-codeberg-org-pixivfe-pixivfe
  (package
    (name "go-codeberg-org-pixivfe-pixivfe")
    (version "3.0.3")
    (source
     (origin
       (method git-fetch)
       (uri (git-reference
             (url "https://codeberg.org/pixivfe/pixivfe.git")
             (commit (string-append "v" version))))
       (file-name (git-file-name name version))
       (sha256
        (base32 "164nazwpjrazn4z9pbfficbr5p4cmgysh8hi5wib27qnczq4870c"))))
    (build-system go-build-system)
    (arguments
     (list
      #:go #{go-#f}#
      #:import-path "codeberg.org/pixivfe/pixivfe/v3"
      #:unpack-path "codeberg.org/pixivfe/pixivfe"))
    (propagated-inputs (list go-golang-org-x-time
                             go-golang-org-x-sync
                             go-golang-org-x-net
                             go-github-com-timandy-routine
                             go-github-com-tidwall-gjson
                             go-github-com-soluble-ai-go-jnode
                             go-github-com-rs-zerolog
                             go-github-com-mattn-go-isatty
                             go-github-com-goccy-go-yaml
                             go-github-com-a-h-templ ; packaged
                             go-github-com-puerkitobio-goquery))
    (home-page "https://codeberg.org/pixivfe/pixivfe")
    (synopsis "Why should I use it?")
    (description
     "Package main is an open-source alternative front-end for pixiv.")
    (license license:agpl3)))

