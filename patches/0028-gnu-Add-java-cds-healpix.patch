+    (arguments
+     (list
+      #:jar-name "cdshealpix.jar"
+      #:source-dir "src/main/java/cds/healpix"
+      #:test-dir "src/test"))
+    (home-page "https://github.com/cds-astro/cds-healpix-java")
+    (synopsis "CDS HEALPix library in Java")
+    (description
