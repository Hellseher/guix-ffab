+(define-public python-kalepy
+  (package
+    (name "python-kalepy")
+    (version "1.4.3")
+    (source
+     (origin
+       (method url-fetch)
+       (uri (pypi-uri "kalepy" version))
+       (sha256
+        (base32 "1a1d98vjkjs8zwx4hdss3gv67jyf25mmsrdc5qi8hpxminkizb6w"))))
